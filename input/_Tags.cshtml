<div class="card bg-light mb-4">
    <h2 class="card-header">Catégories</h5>
    <div class="card-body">
        <div class="card-text">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Nom de la catégorie</th>
                        <th style="white-space: nowrap">Nombre d'articles</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (IDocument tagDocument in Documents[Blog.Tags]
                        .GroupBy(x => x.String(BlogKeys.Tag)).Select(x => x.Where(p => p.Get<int>(Keys.CurrentPage) == 1).First())
                        .OrderBy(x => x.Get<string>(Keys.Title)).Take(10))
                    {
                        string tag = tagDocument.String(BlogKeys.Tag);
                        string postCount = tagDocument.String(Keys.TotalItems);
                        <tr>
                            <td>@tag</td>
                            <td>@postCount</td>
                            <td style="white-space: nowrap"><a class="btn btn-primary" href="@(Context.GetLink(tagDocument) + ".html")">Lister les articles</a></td>
                        </tr>
                    }
                <tbody>
            </table>
        </div>
    </div>
</div>