@{ 
    var postPages = Model.DocumentList(Keys.PageDocuments).OrderByDescending(x => x.Get<DateTime>(BlogKeys.Published)); 
    string tag = Model.String(BlogKeys.Tag).ToLowerInvariant().Replace(' ', '-'); 
    tag = tag.StartsWith(".") ? tag.Substring(1) : tag; 
}

@foreach(var post in postPages)
{
    <div class="card bg-light mb-4">
        <h2 class="card-header">@post.WithoutSettings.String(BlogKeys.Title)</h2>
        <div class="card-body">
            <div class="card-text">@Html.Raw(post.String(BlogKeys.Excerpt))</div>
            <a class="btn btn-primary" href="@Context.GetLink(post)">Lire l'article</a>
        </div>
        <div class="card-footer">Publi√© le @(post.Get<DateTime>(BlogKeys.Published).ToShortDateString(Context))</div>
    </div>

}