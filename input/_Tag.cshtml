@{ 
    var postPages = Model.DocumentList(Keys.PageDocuments).OrderByDescending(x => x.Get<DateTime>(BlogKeys.Published)); 
    string tag = Model.String(BlogKeys.Tag);
}
<div class="card bg-light mb-4">
    <h2 class="card-header">Articles de la cat√©gorie "@tag"</h2>
    <div class="card-body">
        <div class="card-text">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Nom de l'article</th>
                        <th style="white-space: nowrap">Date de publication</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var post in postPages)
                    {
                        <tr>
                            <td>@post.WithoutSettings.String(BlogKeys.Title)</td>
                            <td>@(post.Get<DateTime>(BlogKeys.Published).ToShortDateString(Context))</td>
                            <td style="white-space: nowrap"><a class="btn btn-primary" href="@Context.GetLink(post)">Lire l'article</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>